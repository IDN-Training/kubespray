# on node master
- install python dependecies
sudo apt install python3-dev libffi-dev gcc libssl-dev && sudo apt install python3-pip && sudo pip3 install -U pip

- install ansible
sudo pip install ansible

- Configuration Ansible
nano /etc/ansible/ansible.cfg
[defaults]
host_key_checking=False
pipelining=True
forks=100

- download kubespray
git clone https://github.com/rydrafi13/kubespray

- install add on dependecies
cd kubespray/
pip install -r requirements.txt